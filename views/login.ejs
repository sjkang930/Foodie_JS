<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/login.css">
    <title>FoodieShare</title>
</head>

<header id="header">
    <section class="inner">

        <h1 class="logo-login">
        <% if(user) { %> 
        <a href="/posts"><img class="logoword" src='/icons/wordmark.svg' border='0'></a> 
        <% } else { %>
            <img class="wordlogo" src='/icons/wordmark.svg' border='0'>
        <% } %>
      </h1>
    </section>
  </header>


<body>
    
    <div class="container">
        
        <div class="box">
            
            <div class="heading">
                
                <% if(user) {%>  <a href="/posts"><% } %><img class="logo_burger" src="/icons/logo_burger.svg"></a>
                <img class="wordmark" src="/icons/wordmark.svg">
                
            </div>
    <% if(!user) {%> 
    <div class="form-container">
        <form class="login-form" action="/authentication/login" method="POST">
            <div class="field">
                <input id="email" class="inputbox" name="email" placeholder="Email" required>
            </div>
            <div class="field">
                <input id="password" class="inputbox" type="password" name="password"
                    placeholder="password" required>
            </div>
            <button class="login-button" type="submit">Log In</button>
        </form>
    </div>



     

    <div class="separator">

        <div class="loginText">New Here? <a class="signup" href="/">Sign Up</a></div>
        <a class="reset" href="#">Forgot Password?</a>

        
        
    </div>

      <div class="box">
    
       
        <br>
        <div class="buttons">
            <br>

            <form action="#" method="get">
                <img src="/icons/facebook.svg">
            </form>

            <form
                action="#"
                method="get">
                <img src="/icons/google.svg">
                <br>
            </form>
            <form action="#" method="get">
                <img src="/icons/apple.svg">
                <br>
            </form>


        </div>
    </div>

          <% } %> 
          <% if (user) {%>  
            <div class="welcome"> Hello <%= user.first_name %> ! </div>
            <form class="login-form" action="/authentication/logout" method="POST">   
                  <button class="logout" type="submit">Log Out</button>
              </form>
          <%  } %> 
</body>

</html>