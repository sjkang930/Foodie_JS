<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>FoodieShare</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/posts.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/myprofile.css">
    
</head>


<body>
    <header>
        <div class="logo-wrap">
            <a href="/posts"> <img src='https://ifh.cc/g/9qtKfn.png' border='0'></a>
        </div>
       
    </header>
    <div class="title">
        <a href="/posts">
            <img class="backbtn" src="/icons/back button.svg"></a>
        <div class="newpost">Edit profile</div>
        <a class="gear" href="/authentication/login">
            <img class="gear" src="/icons/settings.svg">
        </a>
        
    </div>
        <section id="main_container d-flex flex-column">
            <% if(!user) {%>
                <form class="login-form" action="/authentication/login" method="POST">
                    <div class="field">
                        <input id="email" name="email" placeholder="email">
                    </div>
                    <div class="field">
                        <input id="password" type="password" name="password" placeholder="password">
                    </div>
                    <button class="login-button" type="submit">Log In</button>
                </form>
                New Here?
    
                <div class="separator">
                    <div class="line"></div>
                    <p>OR</p>
                    <div class="line"></div>
                </div>
    
                <div class="box">
                    <a href="/authentication/signup">Sign Up</a>
                    <a href="">Forgot Password?</a>
                    <br>
                    <br>
                    <br>
                    <form action="https://www.facebook.com/reg/" method="get">
                        <button><img
                                src="https://p7.hiclipart.com/preview/448/137/201/computer-icons-email-facebook-login-bluetie-inc-facebook-icon.jpg"
                                height="10px" width="10px"> Sign up with Facebook</button>
                    </form>
                    <form
                        action="https://accounts.google.com/signup/v2/webcreateaccount?continue=http%3A%2F%2Fsupport.google.com%2Faccounts%2Fanswer%2F27441%3Fhl%3Den&hl=en&dsh=S-2012266799%3A1650933417320832&biz=false&flowName=GlifWebSignIn&flowEntry=SignUp"
                        method="get">
                        <button><img
                                src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/1200px-Google_%22G%22_Logo.svg.png"
                                height="10px" width="10px"> Sign up with Google</button>
                        <br>
                    </form>
                    <form action="https://appleid.apple.com/account" method="get">
                        <button><img
                                src="data:image/jpeg;base64,"
                                height="10px" width="10px"> Sign Up with Apple</button>
                        <br>
                    </form>
                </div>
                </div>
             <% } %>
            <% if (user) {%>
                <div class="posts-container">
                    <div class="user_container">
                        <div class="profile-pic">
                            <label class="profile-label" for="file">
                                <input name="file" type="file" onchange="loadFile(event)" hidden>
                                <img class="profile" src="/icons/smantha.svg" id="output" width="200">
                            </label>
                        </div>
                    </div>
                    <div class="user_name">
                        <div class="nick_name">
                            <a class="name-profile username" id="name-profile-nickname" href="/profile/<%=profileUser[0].user_id%>"><%=profileUser[0].first_name%><%=profileUser[0].last_name%></a>
                        </div>
                        <span class="user-info bio"><%=profileUser[0].bio%></span>
                       <p>
                        <% if(thisUser) {%> 
                        <span class="user-info"><%=thisUser.length%>Posts</span>&nbsp;&nbsp;
                        <% } %> 
                        <span class="user-info follower"><%=totalFollower[0].total_followed%>follower</span>&nbsp;&nbsp;
                        <span class="user-info following"><%=totalFollower[0].total_follower%>following</span></p>
                        </div>
                </div>
                <div class="input">
                    <span class="submit profile"> 
                        <% if(user.user_id === user_id) {%> 
                        <form action="/profile/edit/<%=profileUser[0].user_id%>" method="GET">
                            <input class="submit" type="submit" value="Edit profile">
                        </form>
                        <% } %> 
                    </span>&nbsp&nbsp&nbsp
                    <span class="new follow"> 
                        <% if(user.user_id !== user_id) {%> 
                            <% if(isFollowing) {%> 
                            <input class="new follow following" name="follower" type="submit" value="following">
                            <% } else {%> 
                            <input class="new follow" name="follower" type="submit" value="follow">
                            <% } %> 
                        <% } %> 
                            <input class="<%=profileUser[0].user_id%>" id="profileUserId" type="hidden">
                    </span>
                </div>
        </section>
        <div class="each-posts">
            <% if(thisUser) {%> 
            <% for (let i=0; i < thisUser.length; i++) { %>
           <a href="/posts/location/<%=thisUser[i].post_id%>"> <img class="userPost" src=<%=thisUser[i].image_url%>> </a>
            <% } %> 
           <% } %> 
                <% } %> 

        </div>
            
        <nav class="bottom-nav">

            <a class="nav-btn" href="/posts">
                <img class="nav-icon" src="/icons/home.svg">
            </a>

            <a class="nav-btn" href="/posts/location">
                <img class="nav-icon" src="/icons/locationicon.svg">
            </a>

            <a class="nav-btn" href="/posts/create">
                <img class="nav-icon" src="/icons/post-new.svg">
            </a>

            <a class="nav-btn" href="/chat">
                <img class="nav-icon" src="/icons/txt.svg">
            </a>

            <a class="nav-btn" href="/profile/<%=user.user_id%>">
                <img class="nav-icon" src="/icons/profile.svg">
            </a>

            <div class="horizontal-underline"></div>

        </nav>

    </section>
    <script src="/javascript/profile.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    
</body>

</html>